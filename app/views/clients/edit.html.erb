<h1>Редактирование клиента</h1>

<%= simple_form_for @client, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.association :status, :label => "статус" %>
  <%= f.association :resource, :label => "источник" %>
  <%= f.input :name, :label => "имя" %>
  <%= f.input :surname, :label => "фамилия" %>
  <%= f.input :email %>
  <%= f.input :phone, :label => "телефон", :input_html =>{:id => "phone"} %>
  <%= f.input :idvk, :label => "id-vk" %>
  <%= f.input :school, :label => "школа" %>
  <%= f.input :parent, :label => "родитель" %>
  <%= f.input :parent_phone, :label => "телефон родителя"%>
  <%= f.association :channel, :label => "канал" %>
  <%= f.association :manager, :label => "менеджер" %>
  <%= f.input :daysandtime, :label => "день и время" %>
    <%= f.input :presumed_start, label: "Ожидаемое время начало занятий", :input_html => { :class => 'ui-datepicker ui-widget ui-widget-content ui-helper-clearfix ui-corner-all' } %>
    <br>
    <%= f.label :period %>
    <%= f.select(:period, Period.all.collect {|p| p.period }, { :include_blank => "выбирите период" })  %>
  <%= f.association :office, :label => "офис" %>
  <%= f.input :comment, :label => "комментария" %>
  <%= f.input :editor, :input_html => {:value => current_user.email}, :disabled => true %>
  <%= f.button :submit, :value => "сохранить" %>

<% end %>

<%= link_to 'показать', @client %> |
<%= link_to 'к списку', clients_path %>
