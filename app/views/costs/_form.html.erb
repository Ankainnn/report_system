<div class="form-wrap clearfix">
  <h1><%= action_name == 'edit' ? 'Редактирование типа расходов' : 'Новый тип расходов'%></h1>
  <hr>
  <%= flash[:notice]%>
<%= simple_form_for(@cost) do |f| %>
    <%= f.input :name, label: "Имя" %>
    <div id="submit">
      <%= f.button :submit, :value => "Сохранить"%>
      <div>
        <%= link_to 'К списку', costs_path, class: "btn"%>
      </div>
    </div>
<% end %>
</div>