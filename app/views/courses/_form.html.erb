<div class="form-wrap clearfix">
  <h1><%= action_name == 'edit' ? 'Редактирование курса' : 'Новый курс'%></h1>
  <hr>
  <%= flash[:notice]%>
<%= simple_form_for(@course) do |f| %>
    <%= f.input :direction, label: "Направление" %>
    <%= f.input :subject, label: "Предмет" %>
    <div id="submit">
      <%= f.button :submit, :value => "Сохранить"%>
      <div>
        <%= link_to 'к списку', courses_path, class: "btn"%>
      </div>
    </div>
<% end %>
</div>