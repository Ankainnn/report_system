<!DOCTYPE html>
<html>
<head>
  <title>Reports</title>
  <%= stylesheet_link_tag "application" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "jquery.maskedinput-1.3.min.js" %>
  <%= javascript_include_tag "picnet.table.filter.min.js" %>
  <%= javascript_include_tag "jquery.tablesorter.min.js" %>
  <%= javascript_include_tag "jquery.ui.datepicker-ru.js" %>

  <%= csrf_meta_tags %>
</head>
<body>
<!--<table>-->
  <!--<tr>-->
    <!--<td>-->
<div id="wrap">
  <div id="header">
    <% if user_signed_in? %>
        <div class="navbar navbar-fixed-top navbar-inverse">
          <div class="navbar-inner">
            <!-- Be sure to leave the brand out there if you want it shown -->
            <ul class="nav pull-left">
              <li><%=link_to root_path do%><%= image_tag 'logo.png'%><%end%></li>
              <li class=<%= "active" if controller_name == 'clients' %>><%= link_to "Клиенты", clients_path %></li>
              <% if user_role == 'admin' %>
                  <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                      Администратор
                      <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                      <li><%= link_to 'Mail Boxes', mail_boxes_path %></li>
                      <li><%= link_to 'Пользователи', list_users_path %></li>
                      <li><%= link_to 'Инструкция', help_page_path %></li>
                    </ul>
                  </li>
              <% end %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  Справочники
                  <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Статусы", statuses_path %></li>
                  <li><%= link_to "Источники", resources_path %></li>
                  <li><%= link_to "Районы", channels_path %></li>
                  <li><%= link_to "Курсы", courses_path %></li>
                  <li><%= link_to "Типы расходов", costs_path %></li>
                  <li><%= link_to "Офисы", offices_path %></li>
                  <li><%= link_to "Менеджеры", managers_path %></li>
                  <li><%= link_to "Преподаватели", teachers_path %></li>
                  <li><%= link_to "Графики", schedules_path %></li>
                  <li><%= link_to "Периоды", periods_path %></li>
                  <li><%= link_to "Объекты Расходов", objects_of_expenditures_path %></li>
                </ul>
              </li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  Списки
                  <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Клиенты", clients_path %></li>
                  <li><%= link_to "Договоры", orders_path %></li>
                  <li><%= link_to "Расходы", outlays_path %></li>
                  <li><%= link_to "Выплаты преподователям", salaries_path %></li>
                  <li><%= link_to "Выплаты менеджерам", msalaries_path %></li>
                  <li><%= link_to "Выплаты по договорам", payments_path %></li>
                </ul>
              </li>
            </ul>
            <ul class="nav pull-right">
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <%= user.fio %>
                  <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li>
                    <%= link_to edit_user_path(user.id) do%>
                    <i class="icon-pencil"></i> Редактировать
                    <%end%>
                  </li>
                  <li>

                    <%= link_to destroy_user_session_path, :method => :delete do%>
                        <i class="icon-signout"></i> Выйти
                    <%end%>
                  </li>
                </ul>
              </li>
            </ul>
          </div>
        </div>
    <% end %>
  </div>
  <div id="content">
    <div id="content-header">
    </div>
    <div id="content-main">
      <%= yield %>
    </div>
  </div>
</div>
<div class="footer">
  <div class="footer-content">
    <span><a href="http://net-simple.ru" title="Разработка и продвижение веб-приложений">Net-Simple</a> &copy 2013</span>
  </div>
</div>
</body>
</html>
