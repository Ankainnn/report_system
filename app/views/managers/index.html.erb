<h1>Менеджеры</h1>

<%= link_to 'новый менеджер', new_manager_path %>
<table class="table table-striped">
  <tr>
    <th><%= sortable("name", "имя") %></th>
    <th><%= sortable("phone", "телефон") %></th>
    <th><%= sortable("idvk", "Id-vk") %></th>
    <th><%= sortable("school", "школа") %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @managers.each do |manager| %>
  <tr>
    <td><%= manager.name %></td>
    <td><%= manager.phone %></td>
    <td><%= manager.idvk %></td>
    <td><%= manager.school %></td>
    <td><%= link_to 'см.', manager %></td>
    <td><%= link_to 'ред.', edit_manager_path(manager) %></td>
    <td><%= link_to 'уд.', manager, confirm: 'уверены?', method: :delete %></td>
  </tr>
<% end %>
</table>

