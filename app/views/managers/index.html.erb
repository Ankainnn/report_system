<h1>менеджеры</h1>
<%if user_role != "visitor"%>
<%= link_to 'новый менеджер', new_manager_path %> |
    <%end%>
    <%= link_to 'загрузить таблицу в XLS формате', managers_to_xls_path + ".xls" %>
<table id="demotable" class="table table-striped">
  <thead>
  <tr class="sort">
    <th>имя</th>
    <th>телефон</th>
    <th>Id-vk</th>
    <th>школа</th>
    <th>оклад</th>
    <th>процент</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>
  <tbody>
<% @managers.each do |manager| %>
  <tr>
    <td><%= manager.name %></td>
    <td><%= manager.phone %></td>
    <td><%= manager.idvk %></td>
    <td><%= manager.school %></td>
    <td><%= manager.salary %></td>
    <td><%= manager.percent %></td>
    <td><%= link_to 'см.', manager %></td>
    <%if user_role != "visitor"%>
    <td><%= link_to 'ред.', edit_manager_path(manager) %></td>
    <td><%= link_to 'уд.', manager, confirm: 'Вы уверены?', method: :delete %></td>
        <%end%>
  </tr>
<% end %>
  </tbody>
</table>

