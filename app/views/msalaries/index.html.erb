<h1>Менеджеры</h1>
<%if user_role != "visitor"%>
<%= link_to 'новая выплата', new_msalary_path %> |
<%end%>
    <%= link_to 'загрузить таблицу в XLS формате', msalaries_to_xls_path + ".xls" %> | сортировать по:  <%= render 'sort_by'%>
<table id="demotable" class="table table-striped">
  <thead>
  <tr class="sort">
    <th> <div id="count" style="text-align: center; color: #000000;"></div> менеджер</th>
    <th>дата</th>
    <th> <div id="result" style="text-align: center; color: #000000;"></div> сумма</th>
    <th>начало</th>
    <th>конец</th>
    <th>форма выплаты</th>
    <th>комментарий</th>
    <th>создано</th>
    <th>отредактировано</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>
<tbody>
<% @msalaries.each do |msalary| %>
  <tr class=<%= "tr" if msalary.summ.present?%>>
    <td><%= msalary.manager.try(:name)%></td>
    <td><%= msalary.date%></td>
    <td class="sum"><%= msalary.summ %></td>
    <td><%= msalary.try(:start).strftime('%d-%m-%Y') %></td>
    <td><%= msalary.try(:end).strftime('%d-%m-%Y') %></td>
    <td><%= msalary.type %></td>
    <td><%= msalary.comment %></td>
    <td><%= msalary.created_at.strftime('%d-%m-%Y %H:%M:%S') %></td>
    <td><%= msalary.updated_at.strftime('%d-%m-%Y %H:%M:%S') %></td>
    <td><%= link_to 'см.', msalary %></td>
    <%if user_role != "visitor"%>
    <td><%= link_to 'ред.', edit_msalary_path(msalary) %></td>
    <td><%= link_to 'уд.', msalary, confirm: 'Вы уверены?', method: :delete %></td>
        <%end%>
  </tr>
<% end %>
</tbody>
</table>

<script>
    var delay = (function(){
        var timer = 0;
        return function(callback, ms){
            clearTimeout (timer);
            timer = setTimeout(callback, ms);
        };
    })();
    $(document).ready(function() {
        var res=0;
        var count =0;
        $('.tr').each(function(){
            if ( getComputedStyle(this,null).display != "none") {
                res += parseFloat($(this).find(".sum").html());
            }
        });
        $('tbody tr').each(function(){
            if ( getComputedStyle(this,null).display != "none") {
                count+=1;
            }
        });
        $('#result').text(res);
        $('#count').text(count);

        $('input').keyup(function() {
            delay(function(){
                var res=0;
                var count =0;
                $('.tr').each(function(){
                    if ( getComputedStyle(this,null).display != "none") {
                        res += parseFloat($(this).find(".sum").html());
                    }
                });
                $('tbody tr').each(function(){
                    if ( getComputedStyle(this,null).display != "none") {
                        count+=1;
                    }
                });
                $('#result').text(res);
                $('#count').text(count);
            }, 350 );
        });


    });

</script>


