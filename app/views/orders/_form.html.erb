<%= simple_form_for(@order, :html => { :class => 'form-horizontal' }) do |f| %>

    <%= f.input :number, label: "номер договора" %>
    <%= f.label :client%>
    <% if action_name == "new"%>
    <%= f.text_field :client_id , data: {autocomplete_source: @client_collection.map(&:name)} %>
    <% else %>
    <%= f.text_field :client_id%>
    <% end %>
    <%= f.input :contract, label: "дата заключения"%>
    <%= f.association :course, label: "курс" %>
    <%= f.association :teacher, label: "учитель" %>
    <%= f.association :schedule, label: "расписание" %>
    <%= f.association :office, label: "офис" %>
    <%= f.input :start, label: "начало"%>
    <%= f.input :end, label: "конец" %>
    <%= f.input :discount, label: "скидка" %>
    <%= f.input :price, label: "стоимость" %>
    <%= f.button :submit,"сохранить" %>

<% end %>
