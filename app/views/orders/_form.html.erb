<%= simple_form_for(@order, :html => { :class => 'form-horizontal' }) do |f| %>
    <%= f.input :date, label: "дата" %>
    <%= f.input :number, label: "номер договора" %>
    <div class="input">
    <%= label :client,  "клиент"%>
    <%= text_field_tag :client, nil, data: {autocomplete_source: @client_collection.map(&:fio)}, :html => { :id => 'order_client_id' } %>
    </div>
    <div class="input">
      <%= f.label :contract, "дата заключения"%>
      <%= f.text_field :contract%>
    </div>

    <%= f.association :course, label: "курс" %>
    <%= f.association :teacher, label: "преподаватель" %>
    <%= f.association :schedule, label: "расписание" %>
    <%= f.association :office, label: "офис" %>

    <div class="input">
      <%= f.label :start, "начлао"%>
      <%= f.text_field :start%>
    </div>

    <div class="input">
      <%= f.label :end, "конец"%>
      <%= f.text_field :end%>
    </div>

    <%= f.input :discount, label: "скидка" %>
    <%= f.input :price, label: "стоимость" %>
    <div id="submit">
      <%= f.button :submit, :value => "сохранить"%>
      <div>
        <%= link_to 'к списку', orders_path, class: "btn"%>
      </div>
    </div>

<% end %>
