<h1>договоры</h1>

<%= link_to 'новый договор', new_order_path %>
<table class="table table-striped">
  <tr>
    <th>номер</th>
    <th>клиент</th>
    <th>дата заключения</th>
    <th>курс</th>
    <th>преподаватель</th>
    <th>расписание</th>
    <th>офис</th>
    <th>начало</th>
    <th>конец</th>
    <th>скидка</th>
    <th>стоимость</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%= order.number %></td>
    <td><%= order.client.name %></td>
    <td><%= order.contract %></td>
    <td><%= order.course.name %></td>
    <td><%= order.teacher.name %></td>
    <td><%= order.schedule.name%></td>
    <td><%= order.office.name %></td>
    <td><%= order.start %></td>
    <td><%= order.end %></td>
    <td><%= order.discount %></td>
    <td><%= order.price %></td>
    <td><%= link_to 'см.', order %></td>
    <td><%= link_to 'ред.', edit_order_path(order) %></td>
    <td><%= link_to 'уд.', order, confirm: 'уверены?', method: :delete %></td>
  </tr>
<% end %>
</table>

