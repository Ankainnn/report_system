<div class="form-wrap clearfix">
  <h1> <%= action_name == 'edit' ? 'Редактирование выплаты' : 'Новая выплата' %> </h1>
  <hr>
  <%= flash[:notice]%>
<%= simple_form_for(@outlay, :html => { :class => 'form-horizontal' }) do |f| %>
    <div class="input">
    <label for="date" class="select required control-label"><abbr title="required">*</abbr> Дата</label>
    <%= f.text_field :date%>
    </div>
    <%= f.input :summ, label: "Сумма" %>
  <%= f.association :cost, label: "Типа расходов" %>
  <%= f.association :objects_of_expenditure, label: "Объект расходов" %>
  <%= f.input :person, label: "Автор" %>

    <div id="fix-outlays" class="input">
  <%= f.input :type, :collection => ["Наличные", "По безналу"], :as => :radio_buttons, label: "Форма оплаты" %>
    </div>

    <div class="input">
  <%= f.label :type, "Комментарий"%>
  <%= f.input :comment, as: :text, :input_html => { :cols => 50, :rows => 4 }, label: false%>
    </div>
    <div id="submit">
      <%= f.button :submit, :value => "Сохранить"%>
      <div>
        <%= link_to 'К списку', outlays_path, class: "btn"%>
      </div>
    </div>
  
<% end %>
</div>