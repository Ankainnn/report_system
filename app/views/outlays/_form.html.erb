<%= simple_form_for(@outlay, :html => { :class => 'form-horizontal' }) do |f| %>
  <%= f.input :date, label: "дата" %>
  <%= f.input :summ, label: "сумма" %>
  <%= f.input :name, label: "имя" %>
  <%= f.association :cost, label: "типа расходов" %>
  <%= f.input :person, label: "автор" %>
  <%= f.input :type, :collection => ["Наличные", "По безналу"], :as => :radio_buttons, label: "форма оплаты" %>
  <%= f.input :comment, label: "комментарий" %>
  <%= f.button :submit,"сохранить" %>
  
<% end %>
