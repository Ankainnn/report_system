<%= simple_form_for(@outlay) do |f| %>
  <%= f.input :date %>
  <%= f.input :summ %>
  <%= f.input :name %>
  <%= f.association :cost %>
  <%= f.input :person %>
  <%= f.input :type, :collection => ["Наличные", "По безналу"], :as => :radio_buttons %>
  <%= f.input :comment %>
  <%= f.button :submit %>
  
<% end %>
