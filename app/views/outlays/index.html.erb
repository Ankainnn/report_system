<% @outlays.each do |outlay| %>
  <tr>
    <td><%= outlay.date %></td>
    <td><%= outlay.summ %></td>
    <td><%= outlay.name %></td>
    <td><%= outlay.cost.name %></td>
    <td><%= outlay.type %></td>
    <td><%= outlay.person %></td>
    <td><%= outlay.comment %></td>
    <td><%= link_to 'Show', outlay %></td>
    <td><%= link_to 'Edit', edit_outlay_path(outlay) %></td>
    <td><%= link_to 'Destroy', outlay, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

