<%= simple_form_for(@payment, :html => { :class => 'form-horizontal' }) do |f| %>
  <%= f.input :date, label: "дата" %>
  <%= f.input :summ, label: "сумма" %>
    <div id="fix-payments">
  <%= f.input :type, :collection => ["Наличные", "По безналу"], :as => :radio_buttons, label: "форма оплаты" %>
    </div>

    <div>
  <%= f.label "клиент"%>
  <%= text_field_tag :client, nil , data: {autocomplete_source: @collect_c.map(&:autocomplete)} %>
  </div>

    <div>
  <%= f.label "курс"%>
  <%= f.input :start, collection: @res, as: :select, :include_blank => true, label:false %>
  </div>


    <div>
      <%= f.label "график"%>
      <%= f.grouped_collection_select :end, @res, :schedules, :name, :id, :graphic, :include_blank => true%>
    </div>
    <div>
      <%= f.input :pay_from, label: "c"%>
      <%= f.input :pay_to, label: "по"%>
    </div>

    <%= f.association :order, label: "договор" %>
  <%= f.input :start, label: "начало периода" %>
  <%= f.input :end, label: "конец периода" %>
  <%= f.button :submit,"сохранить" %>

<% end %>
