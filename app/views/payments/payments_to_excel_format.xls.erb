<?xml version="1.0"?>
<Workbook xmlns="urn:schemas-microsoft-com:office:spreadsheet"
          xmlns:o="urn:schemas-microsoft-com:office:office"
          xmlns:x="urn:schemas-microsoft-com:office:excel"
          xmlns:ss="urn:schemas-microsoft-com:office:spreadsheet"
          xmlns:html="http://www.w3.org/TR/REC-html40">
  <Worksheet ss:Name="Sheet1">
    <Table>
      <Row>
        <Cell><Data ss:Type="String">ID</Data></Cell>
        <Cell><Data ss:Type="String">дата</Data></Cell>
        <Cell><Data ss:Type="String">сумма</Data></Cell>
        <Cell><Data ss:Type="String">форма оплаты</Data></Cell>
        <Cell><Data ss:Type="String">договор</Data></Cell>
        <Cell><Data ss:Type="String">клиент</Data></Cell>
        <Cell><Data ss:Type="String">курс</Data></Cell>
        <Cell><Data ss:Type="String">график</Data></Cell>
        <Cell><Data ss:Type="String">часы</Data></Cell>
        <Cell><Data ss:Type="String">офис</Data></Cell>
        <Cell><Data ss:Type="String">создано</Data></Cell>
        <Cell><Data ss:Type="String">отредактировано</Data></Cell>
      </Row>
      <% @payments.each do |payments| %>
          <Row>
            <Cell><Data ss:Type="Number"><%= payments.id %></Data></Cell>
            <Cell><Data ss:Type="String"><%= formating_month(payments.date)%></Data></Cell>
            <Cell><Data ss:Type="String"><%= payments.summ %></Data></Cell>
            <Cell><Data ss:Type="String"><%= payments.type %></Data></Cell>
            <Cell><Data ss:Type="String"><%= payments.order.try(:number)%></Data></Cell>
            <Cell><Data ss:Type="String"><%= client_fio_normalize(payments.client)%></Data></Cell>
            <Cell><Data ss:Type="String"><%= payments.course.try(:name)%></Data></Cell>
            <Cell><Data ss:Type="String"><%= payments.schedule%></Data></Cell>
            <Cell><Data ss:Type="String"><%= payments.hours%></Data></Cell>
            <Cell><Data ss:Type="String"><%= payments.office%></Data></Cell>
            <Cell><Data ss:Type="String"><%= payments.created_at.strftime("#{formating_month(payments.created_at)} %H:%M:%S") %></Data></Cell>
            <Cell><Data ss:Type="String"><%= payments.updated_at.strftime("#{formating_month(payments.created_at)} %H:%M:%S") %></Data></Cell>
          </Row>
      <% end %>
    </Table>
  </Worksheet>
</Workbook>

