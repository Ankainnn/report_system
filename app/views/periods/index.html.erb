<h1>Периоды</h1>

<%if user_role != "visitor"%>
<%= link_to 'новый период', new_period_path %>
    <%end%>
<table id="demotable" class="table table-striped">
  <thead>
  <tr class="sort">
    <th>id</th>
    <th>периоды</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>
<tbody>
<% @periods.each do |period| %>
  <tr>
    <td><%= period.id %></td>
    <td><%= period.period %></td>
    <td><%= link_to 'см.', period %></td>
    <%if user_role != "visitor"%>
    <td><%= link_to 'ред.', edit_period_path(period) %></td>
    <td><%= link_to 'уд.', period, confirm: 'Вы уверены?', method: :delete %></td>
    <%end%>
  </tr>
<% end %>
</tbody>
</table>

<br />

