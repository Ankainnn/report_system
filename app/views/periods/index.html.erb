<h1>Периоды курсов</h1>


<%= link_to 'Новый период', new_period_path %>
<table id="demotable" class="table table-striped">
  <thead>
  <tr class="sort">
    <th>периоды</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>
<tbody>
<% @periods.each do |period| %>
  <tr>
    <td><%= period.period %></td>
    <td><%= link_to 'см.', period %></td>
    <td><%= link_to 'ред.', edit_period_path(period) %></td>
    <td><%= link_to 'уд.', period, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</tbody>
</table>

