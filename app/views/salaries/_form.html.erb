<%= simple_form_for(@salary) do |f| %>
  <%= f.input :date %>
  <%= f.input :summ %>
  <%= f.association :teacher %>
  <%= f.association :course %>
  <%= f.input :month %>
  <%= f.input :type, :collection => ["Наличные", "По безналу"], :as => :radio_buttons %>
  <%= f.input :comment %>
  <%= f.button :submit %>
  
<% end %>
