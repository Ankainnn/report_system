<%= simple_form_for(@salary, :html => { :class => 'form-horizontal' }) do |f| %>
  <%= f.input :date, label: "дата" %>
  <%= f.input :summ, label: "сумма" %>
  <%= f.association :teacher, label: "преподаватель" %>
  <%= f.association :course, label: "курс" %>
  <%= f.input :month, label: "месяц" %>
  <%= f.input :type, label: "форма оплаты", :collection => ["Наличные", "По безналу"], :as => :radio_buttons %>
  <%= f.input :comment, label: "комментарий" %>
  <%= f.button :submit, value: "сохранить" %>
  
<% end %>
