<%= simple_form_for(@schedule, :html => { :class => 'form-horizontal' }) do |f| %>
  <%= f.input :day, label: "день" %>
  <%= f.input :time, label: "время" %>
  <%= f.association :office, label: "офис" %>
  <%= f.association :teacher, label: "преподаватель" %>
  <%= f.association :course, label: "курс" %>
  <%= f.input :hours, :as => :integer, label: "часы" %>
  <%= f.input :start, label: "начало", :as => :date %>
  <%= f.button :submit, value: "сохранить" %>
<% end %>
