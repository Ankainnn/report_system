<h1>Графики</h1>

<%= link_to 'новый график', new_schedule_path %> | <%= link_to 'загрузить таблицу в XLS формате', schedules_to_xls_path + ".xls" %>
<table id="demotable" class="table table-striped">
  <thead>
    <tr class="sort">
      <th><div id="result" style="text-align: center; color: #000000;"></div>день</th>
      <th>время</th>
      <th>офис</th>
      <th>преподаватель</th>
      <th>курс</th>
      <th>часы</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @schedules.each do |schedule| %>
      <tr class="tr">
        <td><%= schedule.day %></td>
        <td><%= schedule.time %></td>
        <td><%= schedule.office.name %></td>
        <td><%= schedule.teacher.fio %></td>
        <td><%= schedule.course.name %></td>
        <td><%= schedule.hours %></td>
        <td><%= link_to 'см.', schedule %></td>
        <td><%= link_to 'ред.', edit_schedule_path(schedule) %></td>
        <td><%= link_to 'уд.', schedule, confirm: 'Are you sure?', method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<script>
    var delay = (function(){
        var timer = 0;
        return function(callback, ms){
            clearTimeout (timer);
            timer = setTimeout(callback, ms);
        };
    })();
    $(document).ready(function() {
        var res=0;
        $('.tr').each(function(){
            if ( getComputedStyle(this,null).display != "none") {
                res += 1;
            }
        });
        $('#result').text(res);

        $('input').keyup(function() {
            delay(function(){
                var res=0;
                $('.tr').each(function(){
                    if ( getComputedStyle(this,null).display != "none") {
                        res += 1;
                    }
                });
                $('#result').text(res);
            }, 350 );
        });

    });

</script>
