<h1>Список графиков</h1>

<%= link_to 'новый график', new_schedule_path %>
<table id="demotable" class="table table-striped">
  <thead>
    <tr>
      <th><%= sortable("day", "день") %></th>
      <th><%= sortable("time", "время") %></th>
      <th><%= sortable("office", "офис") %></th>
      <th><%= sortable("teacher_id", "преподаватель") %></th>
      <th><%= sortable("course_id", "курс") %></th>
      <th><%= sortable("hours", "часы") %></th>
      <th><%= sortable("start", "начало") %></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.day %></td>
        <td><%= schedule.time %></td>
        <td><%= schedule.office.name %></td>
        <td><%= schedule.teacher.name %></td>
        <td><%= schedule.course.name %></td>
        <td><%= schedule.hours %></td>
        <td><%= schedule.start.to_date %></td>
        <td><%= link_to 'см.', schedule %></td>
        <td><%= link_to 'ред.', edit_schedule_path(schedule) %></td>
        <td><%= link_to 'уд.', schedule, confirm: 'Are you sure?', method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
