<h3>Статус пользователя</h3>
<%if @user.ban == "true"%>
    <p>Пользователь <%= @user.email%> заблокирован. <%= link_to "Разблокировать?", ban_user_path(id: @user.id, ban: "false"), confirm: 'Вы уверены?'%></p>
<%else%>
    <p>Заблокировать пользователя <%= @user.email%> ? <%= link_to "Блокировка", ban_user_path(id: @user.id, ban: "true"), confirm: 'Вы уверены?'%></p>
<%end%>
<h3>Редактировать данные</h3>
<%= simple_form_for(@user, :html => { :class => 'form-horizontal' }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, :required => true, :autofocus => true %>
      <%= f.input :password, :required => true, label: "пароль" %>
      <%= f.input :password_confirmation, :required => true, label: "повторите пароль" %>
      <%= f.input :name, :required => true, label: "имя" %>
      <%= f.input :surname, :required => true, label: "фамилия" %>
      <%= f.input :position, :required => true, label: "должность" %>
      <%= f.input :phone, :required => true, label: "телефон" %>
      <%= f.association :office, :required => true, label: "офис" %>
      <%= f.input :role, collection: [["admin", "admin"],["user", "user"],["visitor", "visitor"]], as: :select, label: "права"%>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "готово" %>
    </div>
<% end %>


